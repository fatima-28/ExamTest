
@model IEnumerable<Services>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Services</h4>
            <a class="btn btn-success" asp-action="Create">Create Services</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Desc
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>
                                   @count
                                </td>
                                <td>
                                   <img src="~/assets/img/@s.Icon" />
                                </td>
                                <td>
                                   @s.Title
                                </td>
                                <td>
                                   @s.Description
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@s.Id">Update</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
